{
  "name": "openrewrite-typescript-demo",
  "version": "1.0.0",
  "description": "OpenRewrite demonstration for TypeScript automated refactoring",
  "main": "main_openrewrite.ts",
  "type": "module",
  "scripts": {
    "start": "npx tsx main_openrewrite.ts",
    "rewrite:install": "npm install -g @moderne/cli",
    "rewrite:run": "mod run . --recipe=org.openrewrite.javascript.ConvertVarToLet",
    "rewrite:apply": "mod run . --recipe=org.openrewrite.javascript.ConvertVarToLet --apply"
  },
  "keywords": [
    "openrewrite",
    "refactoring",
    "typescript",
    "ast",
    "codemods"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
